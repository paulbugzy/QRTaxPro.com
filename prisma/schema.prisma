generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(EDITOR)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Page {
  id        String   @id @default(uuid())
  title     String
  slug      String   @unique
  content   String
  meta      Json?
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MenuItem {
  id        String        @id @default(uuid())
  title     String
  path      String
  order     Int
  external  Boolean       @default(false)
  placement MenuPlacement @default(HEADER)
  parentId  String?
  parent    MenuItem?     @relation("MenuItemToMenuItem", fields: [parentId], references: [id])
  children  MenuItem[]    @relation("MenuItemToMenuItem")
}

enum Role {
  ADMIN
  EDITOR
}

enum MenuPlacement {
  HEADER
  HEADER_MOBILE
  FOOTER
  FOOTER_MOBILE
}
