generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(EDITOR)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Page {
  id        String   @id @default(uuid())
  title     String
  slug      String   @unique
  content   String
  meta      Json?
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MenuItem {
  id       String     @id @default(uuid())
  title    String
  path     String
  order    Int
  parentId String?
  parent   MenuItem?  @relation("MenuItemToMenuItem", fields: [parentId], references: [id])
  children MenuItem[] @relation("MenuItemToMenuItem")
}

model Service {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  description String
  content     String
  image       String
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Category {
  id          String    @id @default(uuid())
  title       String
  slug        String    @unique
  description String
  services    Service[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Location {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  description String
  image       String
  landmarks   String[]
  zipCodes    String[]
  lat         Float
  lng         Float
  wikiUrl     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Role {
  ADMIN
  EDITOR
}